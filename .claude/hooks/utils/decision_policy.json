{
  "pre_tool_use": {
    "rules": [
      {
        "action": "deny",
        "pattern": "rm\\s+-rf\\s+/",
        "reason": "危險命令：刪除根目錄",
        "tags": ["system:dangerous"],
        "severity": "critical"
      },
      {
        "action": "deny",
        "pattern": "rm\\s+-rf\\s+\\.claude",
        "reason": "禁止刪除專案內部設定",
        "tags": ["system:dangerous"],
        "severity": "critical"
      },
      {
        "action": "ask",
        "tags": ["git:destructive"],
        "reason": "請確認是否需要清除所有修改",
        "severity": "high"
      }
    ]
  },
  "post_tool_use": {
    "block_on_error": true,
    "block_exit_codes_at_least": 1
  },
  "stop": {
    "block_on_loop": true
  }
}
